<%= stylesheet_link_tag    'devise/login', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="card-body pt-5">
  <a class="text-center" href="index.html"> <h4>Gerenciador de Tarefas</h4></a>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'mt-5 mb-5 login-input'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
    </div>

    <div class="form-group">
      <% if @minimum_password_length %>
        <em>(mínimo de <%= @minimum_password_length %> dígitos)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Senha' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirmação de senha' %>
    </div>

    <div class="actions">
      <%= f.submit "Inscrever-se" , class: 'btn login-form__btn submit w-100' %>
    </div>
  <% end %>

  <%- if controller_name != 'sessions' %>
    <p class="mt-5 login-form__footer">
      <%= link_to "Entrar", new_session_path(resource_name), class: 'text-primary' %>
    </p>
  <% end %>
</div>
