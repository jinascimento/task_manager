<%= stylesheet_link_tag    'devise/login', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="card-body pt-5">
  <a class="text-center" href="index.html"> <h4>Gerenciador de Tarefas</h4></a>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'mt-5 mb-5 login-input'}) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Senha' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label 'Lembrar-me', id: 'remember_me' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Entrar", class: 'btn login-form__btn submit w-100' %>
    </div>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="mt-5 login-form__footer">Ainda nÃ£o tem uma conta?
      <%= link_to "Inscreva-se agora", new_registration_path(resource_name), class: 'text-primary' %>
    </p>
  <% end %>
</div>


